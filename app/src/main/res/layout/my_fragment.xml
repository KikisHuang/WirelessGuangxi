<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wlgx.com.kikis.activity.MainActivity">

    <LinearLayout
        android:id="@+id/login_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray0"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/black99">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/shop_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                     />

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shop_icon"
                    android:layout_marginTop="10dp"
                    android:text="店铺名称"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/shop_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/open_shop"
                android:textSize="12dp"
                android:layout_gravity="center|left"
                android:paddingLeft="50dp"
                android:textColor="@color/black99" />

            <ImageView
                android:id="@+id/on_off_img"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@mipmap/switch_on"
                android:layout_gravity="right|center"
                android:layout_marginRight="5dp"
                />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray0"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray0"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/statis_ll"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/statis_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@mipmap/news_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/statis_img"
                        android:gravity="center"
                        android:text="银行账户"
                        android:textColor="@color/black99"
                        android:textSize="12dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/preview_ll"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">


                    <ImageView
                        android:id="@+id/preview_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@mipmap/attention_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/preview_img"
                        android:gravity="center"
                        android:text="店铺预览"
                        android:textColor="@color/black99"
                        android:textSize="12dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/change_bank_ll"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">


                    <ImageView
                        android:id="@+id/bank_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@mipmap/settings_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/bank_img"
                        android:gravity="center"
                        android:text="修改密码"
                        android:textColor="@color/black99"
                        android:textSize="12dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/agreement_ll"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/agreement_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:padding="10dp"
                        android:src="@mipmap/edit_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/agreement_img"
                        android:gravity="center"
                        android:text="商户协议"
                        android:textColor="@color/black99"
                        android:textSize="12dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/me_rl"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">


                    <ImageView
                        android:id="@+id/me_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@mipmap/punch_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/me_img"
                        android:gravity="center"
                        android:text="关于我们"
                        android:textColor="@color/black99"
                        android:textSize="12dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/upload_rl"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">


                    <ImageView
                        android:id="@+id/up_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@mipmap/updata_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/up_img"
                        android:gravity="center"
                        android:text="检查更新"
                        android:textColor="@color/black99"
                        android:textSize="12dp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/return_login"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">


                    <ImageView
                        android:id="@+id/return_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@mipmap/return_icon2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/return_img"
                        android:gravity="center"
                        android:text="退出登录"
                        android:textColor="@color/black99"
                        android:textSize="12dp" />

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
