<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title2_include"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" ·上传高清晰度营业执照提交审核"
                android:textColor="@color/red1"
                android:textSize="14dp" />

            <FrameLayout
                android:id="@+id/add_license_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/gray0">

                <ImageView
                    android:id="@+id/license_add_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/add_icon3" />

                <ImageView
                    android:id="@+id/license_img"
                    android:layout_width="300dp"
                    android:layout_height="200dp" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=" ·上传法人身份证"
                android:textColor="@color/red1"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/add_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/gray0"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_front_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/sfz1" />

                <ImageView
                    android:id="@+id/id_verso_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/sfz2" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <wlgx.com.kikis.view.RippleView
        android:id="@+id/add_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="20dp"
        android:background="@drawable/red1_bt_normal"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16dp" />

</FrameLayout>