<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_include"></include>
    <TextView
        style="@style/width_line_style2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="15dp"
                android:text="+86"/>
            <TextView
                style="@style/height_line_style3" />

            <EditText
                android:id="@+id/photo_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:hint="输入手机号"
                android:textSize="13dp" />

        </LinearLayout>

        <TextView style="@style/width_line_style2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/pass_icon" />
            <TextView
                style="@style/height_line_style3" />
            <EditText
                android:id="@+id/pass_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:hint="设置密码，不少于6位"
                android:inputType="textPassword"
                android:textSize="13dp" />

        </LinearLayout>

        <TextView style="@style/width_line_style2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/pass_icon2" />

                <EditText
                    android:id="@+id/code_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="输入验证码"
                    android:padding="8dp"
                    android:textSize="13dp" />

            </LinearLayout>

            <TextView style="@style/width_line_style2" />
        </LinearLayout>

        <wlgx.com.kikis.view.RippleView
            android:id="@+id/code_tv"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:background="@drawable/code_corner"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/red3"
            android:textSize="13dp"
            ripple:alphaFactor="0.5"
            ripple:hover="false"
            ripple:rippleColor="@color/white" />

    </LinearLayout>

    <wlgx.com.kikis.view.RippleView
        android:id="@+id/submit_info"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/red_bt_normal"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        ripple:alphaFactor="0.5"
        ripple:hover="false"
        ripple:rippleColor="@color/white" />

</LinearLayout>