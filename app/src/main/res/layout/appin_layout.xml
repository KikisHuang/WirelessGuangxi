<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_include"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="35dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/open_shop_icon" />

                    <TextView style="@style/height_line_style2" />

                    <EditText
                        android:id="@+id/shop_name_ed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:singleLine="true"
                        android:hint="店铺名称"
                        android:textSize="13dp" />

                    <wlgx.com.kikis.view.RippleView
                        android:id="@+id/check_shop_name"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/red1_bt_normal"
                        android:gravity="center"
                        android:text="校验重名"
                        android:textColor="@color/white"
                        android:textSize="12dp" />
                </LinearLayout>

                <TextView style="@style/width_line_style" />

                <include layout="@layout/shop_type_include"></include>

                <LinearLayout
                    android:id="@+id/shop_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/location_icon" />

                    <TextView style="@style/height_line_style2" />

                    <EditText
                        android:id="@+id/shop_address_ed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:focusable="false"
                        android:hint="店铺地址"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/return_right_icon" />
                </LinearLayout>

                <TextView style="@style/width_line_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/phone_icon" />

                    <TextView style="@style/height_line_style2" />

                    <EditText
                        android:id="@+id/shop_call_ed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="店铺联系电话"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:textSize="13dp" />

                </LinearLayout>

                <TextView style="@style/width_line_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/phone_icon" />

                    <TextView style="@style/height_line_style2" />

                    <EditText
                        android:id="@+id/shop_phone_ed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="填写手机号码/账号"
                        android:singleLine="true"
                        android:textSize="13dp" />

                </LinearLayout>

                <TextView style="@style/width_line_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/pass_icon" />

                    <TextView style="@style/height_line_style2" />

                    <EditText
                        android:id="@+id/shop_pass_ed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="设置新密码"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:textSize="13dp" />

                </LinearLayout>

                <!-- <TextView style="@style/width_line_style" />

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="40dp"
                     android:layout_marginTop="10dp"
                     android:gravity="center"
                     android:orientation="horizontal">

                     <ImageView
                         android:layout_width="30dp"
                         android:layout_height="30dp"
                         android:src="@mipmap/note_icon" />

                     <TextView style="@style/height_line_style2" />

                     <EditText
                         android:id="@+id/shop_code_ed"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:background="@color/white"
                         android:hint="输入验证码"
                         android:textSize="13dp" />

                     <wlgx.com.kikis.view.RippleView
                         android:id="@+id/code_tv"
                         android:layout_width="105dp"
                         android:layout_height="40dp"
                         android:background="@drawable/code_corner"
                         android:gravity="center"
                         android:text="获取验证码"
                         android:textColor="@color/red3"
                         android:textSize="11dp" />
                 </LinearLayout>-->

                <TextView style="@style/width_line_style" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/logo_img_layout"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/gray_corner4">

                        <ImageView
                            android:id="@+id/logo_add_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/add_icon" />

                        <TextView
                            android:id="@+id/logo_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="5dp"
                            android:text="上传门店LOGO"
                            android:textColor="@color/gray4"
                            android:textSize="11dp" />

                        <ImageView
                            android:id="@+id/logo_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/upload_img_layout"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/gray_corner4">

                        <ImageView
                            android:id="@+id/add_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/add_icon" />

                        <TextView
                            android:id="@+id/upload_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="5dp"
                            android:text="上传门店照片"
                            android:textColor="@color/gray4"
                            android:textSize="11dp" />

                        <ImageView
                            android:id="@+id/shop_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/upload_img_layout2"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/gray_corner4">

                        <ImageView
                            android:id="@+id/add_img2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/add_icon" />

                        <TextView
                            android:id="@+id/upload_tv2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="5dp"
                            android:text="门店照片2(选填)"
                            android:textColor="@color/gray4"
                            android:textSize="11dp" />

                        <ImageView
                            android:id="@+id/shop_img2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <wlgx.com.kikis.view.RippleView
                android:id="@+id/commit_shop_info"
                android:layout_width="260dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/red_bt_normal"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>