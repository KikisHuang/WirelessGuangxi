                <TextView
                    android:id="@+id/forget_pass_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:padding="18dp"
                    android:textColor="@color/black"
                    android:textSize="11dp" />

                <wlgx.com.kikis.view.RippleView
                    android:id="@+id/submit_info"
                    android:layout_width="280dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/red_bt_normal"
                    android:gravity="center"
                    android:text="登录"
                    android:textColor="@color/white"
                    ripple:alphaFactor="0.5"
                    ripple:hover="false"
                    ripple:rippleColor="@color/white" />

                <wlgx.com.kikis.view.RippleView
                    android:id="@+id/enter_button"
                    android:layout_width="280dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/black_bt_normal"
                    android:gravity="center"
                    android:text="申请入驻"
                    android:textColor="@color/black"
                    ripple:alphaFactor="0.5"
                    ripple:hover="false"
                    ripple:rippleColor="@color/white" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="无限广西商家版1.0v"
                android:textColor="@color/gray4"
                android:textSize="11dp" />

        </RelativeLayout>
