<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_include"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black14"
        >
    <LinearLayout
        android:id="@+id/change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="25dp"
        >
        <LinearLayout
            android:id="@+id/pass_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <include
                android:id="@+id/pass1"
                layout="@layout/pass_include"></include>

            <include
                android:id="@+id/pass2"
                layout="@layout/pass_include"></include>

            <include
                android:id="@+id/pass3"
                layout="@layout/pass_include"></include>

            <wlgx.com.kikis.view.RippleView
                android:id="@+id/change_pass_ri"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/red_bt_normal"
                android:gravity="center"
                android:text="修改"
                android:textColor="@color/white"
                ripple:alphaFactor="0.5"
                ripple:hover="false"
                ripple:rippleColor="@color/white" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/change_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="25dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gray_corner4"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/photo_logo2" />

            <EditText
                android:id="@+id/phone_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center|left"
                android:hint="新手机号"
                android:inputType="phone"
                android:padding="8dp"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/clear_img4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/clear_img2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/gray_corner4"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/pass_icon2" />

                <EditText
                    android:id="@+id/code_ed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|left"
                    android:inputType="number"
                    android:hint="验证码"
                    android:padding="8dp"
                    android:textSize="13dp" />

            </LinearLayout>

            <wlgx.com.kikis.view.RippleView
                android:id="@+id/code_tv"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:background="@drawable/code_corner"
                android:layout_marginLeft="10dp"

                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/red3"
                android:textSize="13dp"
                ripple:alphaFactor="0.5"
                ripple:hover="false"
                ripple:rippleColor="@color/white" />

        </LinearLayout>

        <wlgx.com.kikis.view.RippleView
            android:id="@+id/change_phone_ri"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/red_bt_normal"
            android:gravity="center"
            android:text="修改"
            android:textColor="@color/white"
            ripple:alphaFactor="0.5"
            ripple:hover="false"
            ripple:rippleColor="@color/white" />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>